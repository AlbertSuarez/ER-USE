model ER13

-- classes

class Date
attributes
  dia : Integer
  mes : Integer
  any : Integer
operations
  esPosteriorA(d : Date) : Boolean = 
    (self.any > d.any or
     self.any = d.any and self.mes > d.mes or
     self.any = d.any and self.mes = self.mes and self.dia > d.dia)
  esAnteriorA(d : Date) : Boolean = 
    (self.any < d.any or
     self.any = d.any and self.mes < d.mes or
     self.any = d.any and self.mes = self.mes and self.dia < d.dia)
  esIgualA(d : Date) : Boolean = 
    (self.any = d.any and
     self.mes = d.mes and
     self.dia = d.dia)
end
          
